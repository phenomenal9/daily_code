class Solution {
    int findMaxSum(int arr[], int n) {
        // code here
        int[] t = new int[n+1];
        
        t[0] = 0;
        t[1] = arr[0];
        int mx = t[1];
        if(n>1) {
            t[2] = Math.max(arr[0], arr[1]);
            mx = t[2];
        }
        
        for(int i=3; i<n+1; i++) {
            t[i] = Math.max(t[i-2] + arr[i-1], t[i-1]);
            mx = Math.max(mx, t[i]);
        }
        
        return mx;
    }
}
